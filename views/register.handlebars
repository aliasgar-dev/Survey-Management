
<div id="register">
    <h3 class="text-center text-white pt-5">User Register form</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="user-reg-form" class="form" action="" method="post">
                        <h3 class="text-center text-info">User Register</h3>
                        <div class="form-group">
                            <label for="userName" class="text-info"> Full Name:</label><br>
                            <input type="text" name="userName" id="userName" class="form-control" autocomplete="off" placeholder="Enter Your Full Name">
                        </div>
                        <div class="form-group">
                            <label for="userUserName" class="text-info">Username:</label><br>
                            <input type="text" name="userUserName" id="userUserName" class="form-control" autocomplete="off" placeholder="Enter User Name">
                        </div>
                        <div class="form-group">
                            <label for="userPassword" class="text-info">Password:</label><br>
                            <input type="userPassword" name="userPassword" id="userPassword" class="form-control" autocomplete="off" placeholder="Enter Your Password">
                        </div>
                        <div class="form-group">
                            <span class="btn btn-info btn-md" id="registerUser">Register</span>
                        </div>
                    </form>
                </div>
                <div >
                    <span>Already Registerd?</span>
                    <a href="/login">Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
